<%= form_tag url: '/login' do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from logging in: </h1>

        <ul>
          <%= @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= collection_select(:user, :name, User.all, :name, :name) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= password_field_tag :password%>
  </div>

  <div class="actions">
    <br><%= submit_tag, 'Sign In'%>
  </div>
